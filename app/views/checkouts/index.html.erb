<% content_for :title, 'Checkout / Return' %>

<div class="row">
    <div class="col-xs-hidden col-sm-2"></div>
    <div class="col-xs-10 col-sm-7 glyphicon-custom-left">
        <input type="text" id="g-barcode" class="form-control" placeholder="Scan GAME's barcode to checkout or return." autofocus autocomplete="off"/>
        <span class="glyphicon glyphicon-tower form-control-feedback"></span>
        <h3 id="g-name"></h3>
    </div>
    <div class="col-xs-2 col-sm-1">
        <input id="checkouts-x-btn" type="button" class="btn btn-default" style="display:none;" value="X" />
    </div>
    <div class="col-xs-hidden col-sm-2"></div>
</div>

<div class="row" id="a-row" style="display:none;">
    <div class="col-xs-hidden col-sm-2"></div>
    <div class="col-xs-10 col-sm-7 glyphicon-custom-left">
        <input type="text" id="a-barcode" class="form-control" placeholder="Scan ATTENDEE's badge to checkout game." autocomplete="off" />
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>
    <div class="col-xs-2 col-sm-1"></div>
    <div class="col-xs-hidden col-sm-2"></div>
</div>