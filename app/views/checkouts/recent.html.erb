<% content_for :title, 'Recent Checkouts' %>

<% if @recent && @recent.size > 0 %>
    <div class="row">
        <div class="col-xs-12" style="text-align: center;">
            <h3>
                <%= @recent.size %> Most Recent Open Checkouts
            </h3>
        </div>
    </div>
<% else %>
    <div class="row" style="text-align: center;">
        <p>No recent open checkouts.</p>
    </div>
<% end %>

<%= render 'checkout_table', checkouts: @recent %>