<% if @valuable %>
    <div class="row alert alert-danger">
        <div class="col-xs-6" style="text-align: center; font-size: 20px;">
            <p style="font-size: 25px;">
                Warning, this Game is Valuable!
                <br />
                <small>
                    If you're sure you want to cull this game,
                    <br />
                    please scan it again.
                </small>
            </p>
        </div>
        <div class="col-xs-6">
            <p style="font-size: 25px;">
                <%= @game.barcode %> - <%= @game.name %>
                <br/>
                <small>by <%= @game.by %></small>
            </p>
        </div>
    </div>
<% elsif @game %>
    <div class="row alert alert-success">
        <div class="col-xs-6" style="text-align: center; font-size: 20px;">
            <p>
                <%= @message || "#{@game.name} successfully logged!" %>
            </p>
        </div>
        <div class="col-xs-6">
            <p style="font-size: 25px;">
                <%= @game.barcode %> - <%= @game.name %>
                <br/>
                <small>by <%= @game.by %></small>
            </p>
        </div>
    </div>
<% else %>
    <div class="row alert alert-danger" style="text-align: center;">
        <h4>
            No game found!
        </h4>
    </div>
<% end %>